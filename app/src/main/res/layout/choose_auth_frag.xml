<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">


    <ImageView
        android:id="@+id/bgstartlearn"
        android:layout_width="match_parent"
        android:layout_height="413dp"
        android:layout_marginVertical="-100dp"
        android:layout_marginStart="@dimen/margin_0"
        android:layout_marginEnd="@dimen/margin_0"
        android:layout_marginTop="@dimen/margin_0"
        android:scaleType="fitCenter"
        android:src="@drawable/bgstartlearning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@android:id/custom" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/signInTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="@string/start_learning_now"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text_color"
        android:textSize="@dimen/textsize_23d"
        app:layout_constraintEnd_toEndOf="@+id/bgstartlearn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bgstartlearn"
        app:layout_constraintTop_toBottomOf="@+id/bgstartlearn"
        tools:ignore="SpUsage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/signInDescTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="@string/sign_in_up_page_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text_color2"
        android:textSize="@dimen/textsize_15d"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="@+id/bgstartlearn"
        app:layout_constraintStart_toStartOf="@+id/bgstartlearn"
        app:layout_constraintTop_toBottomOf="@+id/bgstartlearn"
        tools:ignore="SpUsage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:minWidth="170dp"
        android:text="@string/sign_up"
        android:textColor="@color/accent"
        android:textSize="@dimen/textsize_15d"
        app:backgroundTint="@color/white"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signInBtn"
        app:layout_constraintTop_toBottomOf="@+id/signInDescTV"
        app:layout_constraintVertical_bias="0.3"
        app:strokeColor="@color/accent"
        app:strokeWidth="1dp"
        tools:ignore="SpUsage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:minWidth="170dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_15d"
        app:backgroundTint="@color/accent"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signUpBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInDescTV"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="SpUsage" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipLoginBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:fontFamily="@font/regular"
        android:text="@string/skip_login"
        android:textColor="@color/text_color2"
        android:textSize="@dimen/textsize_15d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpBtn"
        tools:ignore="SpUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>